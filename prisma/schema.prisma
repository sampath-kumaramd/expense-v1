generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  whatsappName  String    @unique
  sheetUrl      String
  sheetId       String?
  expenses      Expense[]
}

model Expense {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  amount     Float
  category   String
  note       String?
  userId     String
  user       User     @relation(fields: [userId], references: [id])
}
